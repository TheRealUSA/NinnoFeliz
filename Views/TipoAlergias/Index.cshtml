@model IEnumerable<NinnoFeliz.Models.TipoAlergia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreTipoAlergia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreTipoAlergia)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTipoAlergia">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdTipoAlergia">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTipoAlergia">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
