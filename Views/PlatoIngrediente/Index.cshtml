@model IEnumerable<NinnoFeliz.Models.PlatoIngrediente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdIngredienteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPlatoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdIngredienteNavigation.NombreIngrediente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPlatoNavigation.NombrePlato)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPlatoIngrediente">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPlatoIngrediente">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPlatoIngrediente">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
